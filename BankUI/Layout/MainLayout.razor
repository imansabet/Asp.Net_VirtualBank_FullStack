@inherits LayoutComponentBase

<MudThemeProvider />
<MudPopoverProvider></MudPopoverProvider>
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="10" style="color:#5e03fc">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Style="color:white" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudText Typo="Typo.h5" style="color:white" Class="ml-3">Virtual Bank Application</MudText>
        <MudSpacer />
        <MudIconButton Icon="@Icons.Material.Filled.MoreVert" Style="color:white" Edge="Edge.End" />
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" ClipMode="DrawerClipMode.Always" Elevation="5">
        <NavMenu />
    </MudDrawer>
    <MudMainContent Class="mt-16 pa-4"> 
        @Body
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}