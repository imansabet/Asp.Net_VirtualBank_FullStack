<MudCard Elevation="25" >
    <MudCardHeader>
        <CardHeaderContent>
            <MudText Typo="Typo.body1" Class="mb-2">@Title</MudText>
            <MudText Typo="Typo.body2" Class="mb-1">@Description</MudText>
        </CardHeaderContent>
        <CardHeaderActions>
            <MudTooltip Text="Close" Delay="0" Placement="Placement.Start">
                <MudIconButton Class="mt-4 me-2" Size="Size.Small" Color="Color.Error"
                               Icon="@Icons.Material.Filled.KeyboardReturn" OnClick="CloseButtonClicked">
                </MudIconButton>
            </MudTooltip>
        </CardHeaderActions>
    </MudCardHeader>
</MudCard>