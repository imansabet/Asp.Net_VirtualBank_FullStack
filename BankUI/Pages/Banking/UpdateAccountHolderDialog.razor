<MudForm @ref="@_form" Model="UpdateAccountHolderRequest">
    <MudDialog>
        <TitleContent>
            Edit Account Holder
        </TitleContent>

        <DialogContent>
            <MudTextField @bind-Value="UpdateAccountHolderRequest.FirstName"
                          Label="First Name"
                          Variant="Variant.Outlined">
                FirstName
            </MudTextField>
            <MudTextField @bind-Value="UpdateAccountHolderRequest.LastName"
                          Label="Last Name"
                          Variant="Variant.Outlined">
                LastName
            </MudTextField>
          
            <MudTextField @bind-Value="UpdateAccountHolderRequest.ContactNumber"
                          Label=" Contact Number"
                          Variant="Variant.Outlined">
                Contact Number
            </MudTextField>
            <MudTextField @bind-Value="UpdateAccountHolderRequest.Email"
                          Label="Email"
                          Variant="Variant.Outlined">
                Email
            </MudTextField>

        </DialogContent>

        <DialogActions>
            <MudButton OnClick="Cancel">Cancel</MudButton>
            <MudButton Color="Color.Primary" OnClick="SaveAsync">Update</MudButton>
        </DialogActions>

    </MudDialog>
</MudForm>
