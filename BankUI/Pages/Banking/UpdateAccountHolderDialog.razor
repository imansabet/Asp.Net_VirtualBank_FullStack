<MudForm @ref="@_form" Model="UpdateAccountHolderRequest" Validation="@(_validator.ValidateValue)" ValidationDelay="0">
    <MudDialog>
        <TitleContent>
            Edit Account Holder
        </TitleContent>

        <DialogContent>
            <MudTextField @bind-Value="UpdateAccountHolderRequest.FirstName"
                          Label="First Name"
                          For="@(() => UpdateAccountHolderRequest.FirstName)"
                          Variant="Variant.Outlined">
                FirstName
            </MudTextField>
            <MudTextField @bind-Value="UpdateAccountHolderRequest.LastName"
                          Label="Last Name"
                          For="@(() => UpdateAccountHolderRequest.LastName)"
                          Variant="Variant.Outlined">
                LastName
            </MudTextField>
          
            <MudTextField @bind-Value="UpdateAccountHolderRequest.ContactNumber"
                          Label=" Contact Number"
                          For="@(() => UpdateAccountHolderRequest.ContactNumber)"
                          Variant="Variant.Outlined">
                Contact Number
            </MudTextField>
            <MudTextField @bind-Value="UpdateAccountHolderRequest.Email"
                          Label="Email"
                          For="@(() => UpdateAccountHolderRequest.Email)"
                          Variant="Variant.Outlined">
                Email
            </MudTextField>

        </DialogContent>

        <DialogActions>
            <MudButton OnClick="Cancel">Cancel</MudButton>
           <MudButton   OnClick="SubmitAsync"   Disabled="@(!_validator.Validate(UpdateAccountHolderRequest).IsValid)">Update</MudButton>
        </DialogActions>

    </MudDialog>
</MudForm>
