<MudForm @ref="@_form" Model="CreateAccountHolderRequest" Validation="@(_validator.ValidateValue)" ValidationDelay="0">
    <MudDialog>

        <TitleContent>
            Add New Account Holder
        </TitleContent>

        <DialogContent>
            <MudTextField 
                @bind-Value="CreateAccountHolderRequest.FirstName"
                Label="First Name"
                For="@(() => CreateAccountHolderRequest.FirstName)"
                Variant="Variant.Outlined">
                FirstName
            </MudTextField>
            <MudTextField 
                @bind-Value="CreateAccountHolderRequest.LastName"
                Label="Last Name" 
                For="@(() => CreateAccountHolderRequest.LastName)"
                Variant="Variant.Outlined">
                LastName
            </MudTextField>
            <MudDatePicker 
                @bind-Date="CreateAccountHolderRequest.DateOfBirth"
                Editable="true"
                Label="Date Of Birth"
                For="@(() => CreateAccountHolderRequest.DateOfBirth)"
                Placeholder="Birth Date">
                Birth Date
            </MudDatePicker>
            <MudTextField 
                @bind-Value="CreateAccountHolderRequest.ContactNumber"
                Label=" Contact Number"
                For="@(() => CreateAccountHolderRequest.ContactNumber)"
                Variant="Variant.Outlined">
                Contact Number
            </MudTextField>
            <MudTextField 
                @bind-Value="CreateAccountHolderRequest.Email"
                Label="Email"
                For="@(() => CreateAccountHolderRequest.Email)"
                Variant="Variant.Outlined">
                Email
            </MudTextField>

        </DialogContent>
       
        <DialogActions>
            <MudButton OnClick="Cancel">Cancel</MudButton>
            <MudButton Color="Color.Primary" OnClick="SubmitAsync">Save</MudButton>
        </DialogActions>

    </MudDialog>
</MudForm>
